{
  "name": "home_client",
  "version": "1.0.0",
  "description": "home client",
  "main": "index.js",
  "repository": "git@github.com:markusv/home_client.git",
  "author": "Markus Voss",
  "license": "MIT",
  "scripts": {
    "predev": "npm run lint",
    "dev": "webpack-dev-server --config ./core/webpack.config.js --host 0.0.0.0",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=development webpack --config ./core/webpack.prod.config.js",
    "build:server": "babel src/server -d build/server",
    "serve": "node build/server/index.js",
    "lint": "eslint ./src --ext=.js,.jsx"
  },
  "dependencies": {
    "cross-env": "^3.2.4",
    "inferno": "^1.4.2",
    "inferno-component": "^1.4.2",
    "inferno-create-element": "^1.4.2",
    "inferno-redux": "^1.4.2",
    "koa": "^2.2.0",
    "koa-convert": "^1.2.0",
    "koa-static-server": "^1.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-inferno": "^2.1.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-nrk": "^5.1.0",
    "eslint-plugin-compat": "^1.0.2",
    "eslint-plugin-inferno": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "node-sass": "^4.5.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2"
  }
}
